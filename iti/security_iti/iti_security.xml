<odoo>
    <data>

      <!-- Model Level of Security -->

      <record id="iti_groups_category" model="ir.module.category">
        <field name="name">ITI Groups</field>
      </record>

      <record id="iti_normal_group" model="res.groups">
        <field name="name">ITI Normal User</field>
        <field name="category_id" ref="iti_groups_category"/> <!-- ref : to convert xml id to database id -->
      </record>   

      <record id="iti_manager_group" model="res.groups">
        <field name="name">ITI Manager User</field>
        <field name="category_id" ref="iti_groups_category"/> 
        <field name="implied_ids" eval="[(4, ref('iti_normal_group'))]"/> <!-- iti_manager_group inherits permissions from the iti_normal_group -->
      </record>   
      
      <!-- Record Level of Security -->
      <record id="view_created_students_only_rule" model="ir.rule">
        <field name="name">View Created student only</field>
        <field name="model_id" ref="model_iti_student"/>
          <field name="domain_force">[('create_uid', '=', user.id)]</field> <!--condition that will apply--> 
        <!-- <field name="groups" eval="[(4, ref('iti_normal_group'))]"/> Groups will apply on it condition  -->
      </record>

      <record id="view_all_students_rule" model="ir.rule">
        <field name="name">View all students for managers</field>
        <field name="model_id" ref="model_iti_student"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('iti_manager_group'))]"/>
      </record>

    </data>
</odoo>
  